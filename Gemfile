source "https://rubygems.org"
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

ruby "3.1.2"

# The app is using Sinatra as a web framework
gem "sinatra"

# We need a web server
gem "puma"

gem "rackup"

# Foreman is used to run the app locally
gem "foreman"

# Used for testing
gem "minitest"
gem "rack-test"
gem "capybara"

# Used to get access to the Minitest testing task
gem "rake"

# Audit gems for CVEs
gem "bundle-audit"

# Redis is used for caching
gem "redis"

# dotenv loads environment variables from a file
gem "dotenv"
